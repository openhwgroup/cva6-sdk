+
+#define pr_fmt(fmt)	KBUILD_MODNAME ": " fmt
+
+#include <linux/module.h>
+#include <linux/mod_devicetable.h>
+#include <linux/kernel.h>
+#include <linux/platform_device.h>
+#include <linux/random.h>
+#include <linux/hw_random.h>
+
+#define DRIVER_AUTHOR	"Jonathan Kimmitt <jrrk2@cam.ac.uk>"
+#define DRIVER_DESC	"LowRISC HRNG driver"
+#define DRIVER_NAME     "lowrisc-hwrnd"
+
+static void __iomem *ioaddr;
+
+static int lowrisc_rng_read(struct hwrng *rng, void *data, size_t max, bool wait)
+{
+        volatile uint64_t *rng_base = ioaddr;
+        
+	uint32_t *buf = (uint32_t *)data;
+	int i = 0, dummy, empty, len = max / sizeof(uint32_t);
+
+	/* We rely on rng_buffer_size() being >= sizeof(uint32_t) */
+        do {
+            dummy = rng_base[3];
+            empty = (1LL<<34) & rng_base[3] ? 1 : 0;
+            if (!empty)
+              {
+                rng_base[2] = 0;
+                dummy = rng_base[2];
+                *buf++ = rng_base[2];
+                ++i;
+              }
+          }
+	while ((i < len) && !empty);
+        
+	return i * sizeof(uint32_t);
+}
+
+static struct hwrng lowrisc_hwrng = {
+	.name = DRIVER_NAME,
+	.read = lowrisc_rng_read,
+};
+
+static int lowrisc_rng_remove(struct platform_device *pdev)
+{
+	hwrng_unregister(&lowrisc_hwrng);
+
+	return 0;
+}
+
+static int lowrisc_rng_probe(struct platform_device *pdev)
+{
+	int rc;
+	struct device *dev = &pdev->dev;
+        struct resource *iomem = platform_get_resource(pdev, IORESOURCE_MEM, 0);
+        ioaddr = devm_ioremap_resource(dev, iomem);
+        
+	rc = hwrng_register(&lowrisc_hwrng);
+	if (rc) {
+		/* We only register one device, ignore any others */
+		if (rc == -EEXIST)
+			rc = -ENODEV;
+
+		return rc;
+	}
+
+	pr_info("lowrisc_rng: Lowrisc hardware random number generator platform (%llX-%llX) mapped to %lx\n",
+               iomem[0].start,
+               iomem[0].end,
+               (size_t)(ioaddr));
+
+	return 0;
+}
+
+static const struct of_device_id lowrisc_rng_match[] = {
+	{ .compatible	= DRIVER_NAME },
+	{},
+};
+MODULE_DEVICE_TABLE(of, lowrisc_rng_match);
+
+static struct platform_driver lowrisc_rng_driver = {
+	.driver = {
+		.name = DRIVER_NAME,
+		.of_match_table = lowrisc_rng_match,
+	},
+	.probe	= lowrisc_rng_probe,
+	.remove = lowrisc_rng_remove,
+};
+module_platform_driver(lowrisc_rng_driver);
+
+MODULE_LICENSE("GPL");
+MODULE_DESCRIPTION("HWRNG driver for LowRISC");
